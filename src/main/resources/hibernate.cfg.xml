<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost/football</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">sminge1</property>
    <property name="hibernate.connection.pool_size">10</property>
    <property name="show_sql">true</property>
    <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.hbm2ddl.auto">update</property>

    <property name="hibernate.c3p0.min_size">5</property>
    <property name="hibernate.c3p0.max_size">20</property>
    <property name="hibernate.c3p0.timeout">300</property>
    <property name="hibernate.c3p0.max_statements">50</property>
    <property name="hibernate.c3p0.idle_test_period">3000</property>
    
    
    <!-- Mapping files XML -->
    <!-- 
    <mapping resource="hibernatemapping/Season.hbm.xml"/>
    <mapping resource="hibernatemapping/SeasonDivision.hbm.xml"/>
    <mapping resource="hibernatemapping/Division.hbm.xml"/>
    <mapping resource="hibernatemapping/Team.hbm.xml"/>
    <mapping resource="hibernatemapping/SeasonDivisionTeam.hbm.xml"/>
    <mapping resource="hibernatemapping/Fixture.hbm.xml"/>
     -->
     
     <!-- Mapping classes using Annotations -->
     <mapping class="uk.co.mindbadger.footballresultsanalyser.domain.Season"/>
     <mapping class="uk.co.mindbadger.footballresultsanalyser.domain.Division"/>
     <mapping class="uk.co.mindbadger.footballresultsanalyser.domain.Team"/>
     <mapping class="uk.co.mindbadger.footballresultsanalyser.domain.SeasonDivision"/>
     <mapping class="uk.co.mindbadger.footballresultsanalyser.domain.SeasonDivisionTeam"/>
  </session-factory>
</hibernate-configuration>
